                android:paddingBottom="20dp"
                android:layout_gravity="center"
                android:outlineAmbientShadowColor="@color/black">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_1"
                    android:layout_gravity="center|top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Rp350.000 - Rp1.525.000"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:textSize="12sp"
                    android:text="JIExpo Kemayoran, Jakarta Pusat"
                    android:textColor="#7B7B7B"
                    android:layout_gravity="bottom|start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingLeft="22dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="JAVA JAZZ FESTIVAL"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|start" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center"
                android:outlineAmbientShadowColor="@color/black">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_2"
                    android:layout_gravity="center|top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Rp450.000"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:textSize="12sp"
                    android:text="JIExpo Kemayoran, Jakarta Pusat"
                    android:textColor="#7B7B7B"
                    android:layout_gravity="bottom|start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingLeft="22dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="PESTA PORA"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|start" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center"
                android:outlineAmbientShadowColor="@color/black">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_3"
                    android:layout_gravity="center|top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Rp90.000 - Rp190.000"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:textSize="12sp"
                    android:text="JIExpo Kemayoran, Jakarta Pusat"
                    android:textColor="#7B7B7B"
                    android:layout_gravity="bottom|start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingLeft="22dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="JAK-JAPAN MATSURI"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|start" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
