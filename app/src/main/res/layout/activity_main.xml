                        android:textStyle="bold"/>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbarSize="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="14dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:src="@drawable/rectangle_selected"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="14dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:src="@drawable/rectangle_1"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="14dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:src="@drawable/rectangle_2"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="14dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:src="@drawable/rectangle_3"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="14dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:src="@drawable/rectangle_4"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="14dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:src="@drawable/rectangle_5"/>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center"
                android:outlineAmbientShadowColor="@color/black">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_0"
                    android:layout_gravity="center|top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Rp150.000 - Rp550.000"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:textSize="12sp"
                    android:text="GWK Cultural Park, Bali"
                    android:textColor="#7B7B7B"
                    android:layout_gravity="bottom|start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingLeft="22dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="GWK BALI COUNTDOWN"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom|start" />
            </FrameLayout>

            <FrameLayout
